# Import libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Load data
df = pd.read_csv('diabetic_data.csv')

# =============================================
# 1. Basic Data Overview
# =============================================
print("Dataset Shape:", df.shape)
print("\nColumn Names:\n", df.columns.tolist())
print("\nData Types:\n", df.dtypes)
print("\nMissing Values:\n", df.isnull().sum())

# =============================================
# 2. Readmission Distribution
# =============================================
plt.figure(figsize=(8, 5))
df['readmitted'].value_counts().plot(kind='bar', color=['steelblue', 'coral', 'gray'])
plt.title('Distribution of Readmission Status')
plt.xlabel('Readmission Status')
plt.ylabel('Number of Patients')
plt.xticks(rotation=0)
plt.tight_layout()
plt.savefig('images/readmission_distribution.png')
plt.show()

# =============================================
# 3. Readmission Rate by Age Group
# =============================================
age_readmit = df.groupby('age')['readmitted'].apply(
    lambda x: (x == '<30').sum() / len(x) * 100
).sort_values(ascending=False)

plt.figure(figsize=(10, 5))
age_readmit.plot(kind='bar', color='steelblue')
plt.title('30-Day Readmission Rate by Age Group')
plt.xlabel('Age Group')
plt.ylabel('Readmission Rate (%)')
plt.xticks(rotation=45)
plt.tight_layout()
plt.savefig('images/readmission_by_age.png')
plt.show()

# =============================================
# 4. Length of Stay vs Readmission
# =============================================
plt.figure(figsize=(10, 5))
sns.boxplot(x='readmitted', y='time_in_hospital', data=df, palette='Set2')
plt.title('Length of Stay by Readmission Status')
plt.xlabel('Readmission Status')
plt.ylabel('Days in Hospital')
plt.tight_layout()
plt.savefig('images/stay_vs_readmission.png')
plt.show()

# =============================================
# 5. Prior Inpatient Visits vs Readmission
# =============================================
plt.figure(figsize=(10, 5))
sns.boxplot(x='readmitted', y='number_inpatient', data=df, palette='Set3')
plt.title('Prior Inpatient Visits by Readmission Status')
plt.xlabel('Readmission Status')
plt.ylabel('Number of Prior Inpatient Visits')
plt.tight_layout()
plt.savefig('images/prior_visits_vs_readmission.png')
plt.show()

# =============================================
# 6. Correlation Heatmap (Numeric Features)
# =============================================
numeric_cols = ['time_in_hospital', 'num_lab_procedures', 'num_procedures',
                'num_medications', 'number_outpatient', 'number_emergency',
                'number_inpatient', 'number_diagnoses']

plt.figure(figsize=(10, 8))
sns.heatmap(df[numeric_cols].corr(), annot=True, cmap='coolwarm', center=0)
plt.title('Correlation Matrix of Numeric Features')
plt.tight_layout()
plt.savefig('images/correlation_heatmap.png')
plt.show()

# =============================================
# 7. Key Insights Summary
# =============================================
print("\n" + "="*50)
print("KEY INSIGHTS")
print("="*50)
print(f"Total Patients: {len(df):,}")
print(f"30-Day Readmission Rate: {(df['readmitted'] == '<30').mean()*100:.1f}%")
print(f"Average Length of Stay: {df['time_in_hospital'].mean():.1f} days")
print(f"Average Number of Medications: {df['num_medications'].mean():.1f}")
